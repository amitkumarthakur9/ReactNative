{
  "expo": {
    "name": "growthvine",
    "slug": "growthvine",
    "plugins": [
      "@react-native-google-signin/google-signin",
      "@react-native-firebase/app",
      "@react-native-firebase/auth",
      "@react-native-firebase/perf",
      "@react-native-firebase/crashlytics",
	  [
        "expo-image-picker",
        {
          "photosPermission": "growthvine want to access gallery"
        }
      ],
	   [
        "expo-local-authentication",
        {
          "faceIDPermission": "Allow growthvine to use Face ID."
        }
      ]
    ],
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/loader.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/loader.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff",
      "duration": 3000
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "googleServicesFile": "./google-services.json",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.growthvinecapitalapp.app",
      "permissions": [
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "09336923-80a8-4402-8060-ba85ab61c166"
      }
    }
  }
}
